        <TextBox x:Name="editore" HorizontalAlignment="Left" Margin="400,199,0,0" TextWrapping="Wrap" Text="editore" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="npagine" HorizontalAlignment="Left" Margin="506,69,0,0" TextWrapping="Wrap" Text="pagine" VerticalAlignment="Top" Width="120"/>
